
@{
    if (Session["check"] != null)
    {
        ViewBag.Title = "Email";
        Layout = "~/Views/Shared/_MyUserLayout.cshtml";


        <style>
            div {
                margin: 100px 285px;
                padding: 10px;
                text-align: center;
            }

            .button {
                height: 50px;
                width: 100px;
                background-color: lightblue;
            }
        </style>
        <div>
            <h1>Enter Code</h1>
            <form action="~/Existing/UpdatePassword" method="get">
                <input type="text" name="code" id="code" required /><br /><br />
                <input class="button" type="submit" name="btn" id="btn" value="Confirm" />
            </form>

        </div>

    }
    else
    {
       <span>Please login firts</span>
    }
}


