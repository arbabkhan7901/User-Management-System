
@{ 
    ViewBag.Title = "Exist";
    Layout = "~/Views/Shared/_MyUserLayout.cshtml";
}

  <style>
      body {
            background-color: white;
        }

        .div1 {
            background-color: white;
            padding: 10px;
            margin: 150px 490px;
            border: 50px black;
            border-radius: 5px;
            height: 480px;
            width: 500px;
            text-align: left;
        }
        .button {
        height: 40px;
        width: 80px;
        background-color: lightblue;
    }
  </style>  
<div class="div1">
    <h1 style="color:black;font-family:Verdana; text-align: center;">Login Screen</h1>
    <form action="~/Existing/login" method="get">
        <table cellspacing="4" cellpadding="2">
            <tr>
                <td>
                    Login:
                </td>
                <td>
                    <input type="text" name="login" id="login" required/>
                </td>
            </tr>
            <tr>
                <td>Password:</td>
                <td>
                    <input type="password" name="password" id="password" required/>
                </td>
            </tr>
            <tr>

                <td>
                    <input type="submit" class="button" name="btn" login="btn" value="Login" />
                    <input type="submit" class="button" name="cancel" id="cancel" value="Cancel" onclick="@("window.location.href='" + @Url.Action("Start", "User") + "'");"/>
                </td>
            </tr>
     </table>
</form>
   

    <form action="~/Existing/Email" method="get">
        <table>
            <tr>
                <td>
                    <label for="pwd">Forget Password?</label>
                </td>
            </tr>
            <tr>
                <td>Email:</td>
                <td>
                    <input type="email" name="email" id="email" required/>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" class="button" value="Reset" name="btn1" id="btn1" onclick="@{
                        Session["check"] = "true";
                    }"/>
                </td>
            </tr>
        </table>
    </form>
</div>

